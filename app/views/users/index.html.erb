<p id="notice"><%= notice %></p>

<h1>Amigo Secreto</h1>
<div class="users_buttons">
  <%= link_to 'Incluir Patriciponte', new_user_path, class: 'btn btn-success' %>
  <%= link_to 'Sortear', raffle_users_path, class: 'btn btn-primary' %>
</end>
</div>
<table class="table table-inverse">
  <thead>
    <tr>
      <th>Nome do Participante</th>
      <th>Email</th>
      <th>Amigo Secreto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.friend.try(:name) %></td>
          <td><%= link_to 'Alterar dados do participante', edit_user_path(user), class: 'alterar'%></td>
        <td><%= link_to 'Tirar participante do sorteio', user, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'tirar' %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>
